<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Igry.Views.GameMenuItemView">
    <ContentView.Content>
        <Grid WidthRequest="140" HeightRequest="120" Padding="5, 5, 5, 5">
            <Image Source="{Binding BackgroundImage}" Aspect="AspectFill" 
                   VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
            <Label Text="{Binding Name}" HorizontalOptions="Center" VerticalOptions="End"
                   VerticalTextAlignment="Center" HorizontalTextAlignment="Center" TextColor="White"/>
        </Grid>
    </ContentView.Content>
</ContentView>