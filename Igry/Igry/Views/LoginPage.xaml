<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Igry.Views.LoginPage"
             xmlns:prism="http://prismlibrary.com" 
             Title="Login">

    <ContentPage.Content>
        
        <StackLayout  VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Margin="20, 20, 20, 20">
            <Label Text="Igry" HorizontalOptions="Center"/>
            <Entry Placeholder="Email" Text="{Binding Email.Value}" Margin="20, 0, 20, 0"/>
            <Entry Placeholder="Password" Text="{Binding Password.Value}" Margin="20, 0, 20, 0"/>
            <Button Text="Login" TextColor="Black" BackgroundColor="Gray" Command="{Binding LogInCommand}"/>
            <Button Text="Register" TextColor="Black" BackgroundColor="Gray" Command="{prism:NavigateTo 'RegisterPage'}"/>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>