<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Igry.Views.HomePage"
             Title="Home">
    <ContentPage.Content>
        <Grid RowDefinitions="3*, 7*" ColumnDefinitions="*" VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand">
            <Image Source="{Binding GameOfTheWeek.BackgroundImage}" Grid.Row="0" Grid.Column="0" 
                   VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Aspect="AspectFill"/>
            <Label Text="Game of the month" Grid.Row="0" Grid.Column="0" 
                   VerticalOptions="Center" HorizontalOptions="Center"/>
            <Label Text="{Binding GameOfTheWeek.Name}" Grid.Row="0" Grid.Column="0"
                   VerticalOptions="End" HorizontalOptions="Center"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>