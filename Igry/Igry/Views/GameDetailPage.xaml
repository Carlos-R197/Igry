<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Igry.Views.GameDetailPage"
             Title="Game Detail">
    <ContentPage.Content>
        <Grid ColumnDefinitions="*, *" RowDefinitions="*, *, *, 3*"
               Margin="20, 0, 20, 0">
            <Label Text="{Binding CurrentGame.Name}"  Margin="0, 20, 0, 0" Grid.Row="0" Grid.Column="1"/>
            <Image Source="{Binding CurrentGame.BackgroundImage}"  Margin="0, 20, 0, 0" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Aspect="AspectFill"/>

            <StackLayout  Grid.Row="1" Grid.Column="1">
                <Label Text="{Binding CurrentGameGenres}"/>
            
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Release Date: "/>
                            <Span Text="{Binding CurrentGame.Released}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </StackLayout>


            <StackLayout Grid.Row="2" Grid.Column="1">
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Rating: "/>
                            <Span Text="{Binding CurrentGame.Rating}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Label >
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Available in the following platforms: "/>
                            <Span Text="{Binding CurrentGamePlatforms}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </StackLayout>

            <ImageButton Source="{Binding FavoriteImagePath}" Command="{Binding FavoriteCommand}"
                         Grid.Row="3" Grid.Column="0"  VerticalOptions="End"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>