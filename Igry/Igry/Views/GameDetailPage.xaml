<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Igry.Views.GameDetailPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Margin="0, 20, 0, 20">
            <Label Text="{Binding CurrentGame.Name}" />
            <Button Text="Get a random action game details" Command="{Binding GetRandomGameCommand}"/>
            <Image Source="{Binding CurrentGame.BackgroundImage}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>