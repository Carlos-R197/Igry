<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Igry.Views.GameDetailPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Margin="20, 0, 20, 0">
            <Label Text="{Binding CurrentGame.Name}" />
            <Image Source="{Binding CurrentGame.BackgroundImage}"/>
            <Label Text="{Binding CurrentGameGenres}"/>
            
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Release Date: "/>
                        <Span Text="{Binding CurrentGame.Released}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <Label>
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Rating: "/>
                    <Span Text="{Binding CurrentGame.Rating}" />
                </FormattedString>
            </Label.FormattedText>
            </Label>

            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Available in the following platforms: "/>
                        <Span Text="{Binding CurrentGamePlatforms}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <Button Text="Get a random action game details" Command="{Binding GetRandomGameCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>